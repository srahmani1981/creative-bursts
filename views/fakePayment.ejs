<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add required meta tags, title, and link to your CSS here -->
    <title>Payment - Lacey Rahmani Photography</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Lacey Rahmani Photography</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/portfolio">Portfolio</a></li>
                <li><a href="/clientLogin">Client Login</a></li>
                <li><a href="/" id="logoutButton">Logout</a></li>
                <!-- Add more navigation items if needed -->
            </ul>
        </nav>
    </header>

    <div class="payment-container">
        <h2>Payment Page</h2>

        <div class="payment-type-selection">
            <input type="radio" id="creditCard" name="paymentType" value="creditCard" checked>
            <label for="creditCard">Credit Card</label>
            <input type="radio" id="ach" name="paymentType" value="ach">
            <label for="ach">ACH</label>
        </div>

        <div id="creditCardForm" style="display: block;">
            <h3>Credit Card Payment</h3>
            <form id="ccForm">
                <div class="form-group">
                    <label for="cc-name">Name on Card:</label>
                    <input type="text" id="cc-name" name="cc-name" required>
                </div>
                <div class="form-group">
                    <label for="cc-number">Card Number:</label>
                    <input type="text" id="cc-number" name="cc-number" required>
                </div>
                <div class="form-group">
                    <label for="cc-expiry">Expiration Date:</label>
                    <input type="text" id="cc-expiry" name="cc-expiry" required placeholder="MM/YY">
                </div>
                <div class="form-group">
                    <label for="cc-cvv">CVV:</label>
                    <input type="text" id="cc-cvv" name="cc-cvv" required>
                </div>
                <button type="button" onclick="submitForm('creditCard')">Submit Credit Card Payment</button>
            </form>
        </div>

        <div id="achForm" style="display: none;">
            <h3>ACH Payment</h3>
            <form id="achForm">
                <div class="form-group">
                    <label for="ach-bank-name">Bank Name:</label>
                    <input type="text" id="ach-bank-name" name="ach-bank-name" required>
                </div>
                <div class="form-group">
                    <label for="ach-account-number">Account Number:</label>
                    <input type="text" id="ach-account-number" name="ach-account-number" required>
                </div>
                <div class="form-group">
                    <label for="ach-routing-number">Routing Number:</label>
                    <input type="text" id="ach-routing-number" name="ach-routing-number" required>
                </div>
                <button type="button" onclick="submitForm('ach')">Submit ACH Payment</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelectorAll('input[name="paymentType"]').forEach(input => {
            input.addEventListener('change', function() {
                document.getElementById('creditCardForm').style.display = this.value === 'creditCard' ? 'block' : 'none';
                document.getElementById('achForm').style.display = this.value === 'ach' ? 'block' : 'none';
            });
        });

        function submitForm(paymentType) {
            // Placeholder for form submission logic
            alert(`Fake ${paymentType} payment submitted.`);
            // Here, you'd typically gather form data and send it to your server
        }
    </script>
      <footer>
        <p>&copy; <%= new Date().getFullYear() %> Lacey Rahmani Photography</p>
      </footer>
    

</body>
</html>

